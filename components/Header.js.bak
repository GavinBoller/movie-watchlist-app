'use client';

import { useState, useEffect, useCallback } from 'react';
import { useSession, signIn, signOut } from "next-auth/react";
import { usePathname, useRouter } from 'next/navigation';
import { Search, List, Film, Monitor, LogIn, LogOut, UserCircle, Loader2, Settings as SettingsIcon } from 'lucide-react';
import Link from 'next/link';
import { Button } from './ui/button';
import {
  DropdownMenu,
  DropdownMenuContent,
  DropdownMenuItem,
  DropdownMenuLabel,
  DropdownMenuSeparator,
  DropdownMenuTrigger,
} from './ui/dropdown-menu';
import PlatformManagementModal from './PlatformManagementModal';

export default function Header() {
  const { data: session, status, update: updateSession } = useSession();
  const loading = status === "loading";
  const [isSigningIn, setIsSigningIn] = useState(false);
  const [isMenuOpen, setIsMenuOpen] = useState(false);
  const [isPlatformModalOpen, setIsPlatformModalOpen] = useState(false);
  const pathname = usePathname();
  const router = useRouter();

  // Track authentication state changes
  const [authState, setAuthState] = useState({
    isLoading: true,
    isAuthenticated: false,
    userImage: null,
    userName: null,
  });

  // Log session state changes
  useEffect(() => {
    console.log('Header - Session state:', { 
      status,
      loading,
      isAuthenticated: !!session,
      sessionId: session?.id || null,
      currentPath: pathname,
      user: session?.user ? {
        name: session.user.name,
        email: session.user.email,
        image: session.user.image ? 'Available' : 'None',
        id: session.user.id || null
      } : null
    });
    
    // Update the auth state when session changes
    setAuthState({
      isLoading: status === 'loading',
      isAuthenticated: !!session,
      userImage: session?.user?.image || null,
      userName: session?.user?.name || session?.user?.email || null,
    });
    
    // Reset signing in state if we're authenticated
    if (session && isSigningIn) {
      setIsSigningIn(false);
    }
  }, [session, status, loading, pathname, isSigningIn]);

  // Force refresh session when component mounts
  useEffect(() => {
    const refreshSession = async () => {
      try {
        await updateSession();
        console.log('Session refreshed on mount');
      } catch (error) {
        console.error('Failed to refresh session:', error);
      }
    };
    
    refreshSession();
  }, [updateSession]);

  const navItems = [
    { name: 'Search', href: '/search', icon: Search },
    { name: 'My Watchlist', href: '/watchlist', icon: List },
  ];

  // List of paths that require authentication
  const protectedPaths = ['/watchlist', '/settings'];

  const handleSignIn = useCallback(async () => {
    console.log('Initiating sign-in flow from Header...');
    setIsSigningIn(true);
    
    try {
      // Use the current path as the callback URL if it's not a public path
      const callbackUrl = pathname === '/' || pathname === '/auth/signin' 
        ? '/search' 
        : pathname;
      
      console.log(`Sign-in with callbackUrl: ${callbackUrl}`);
      
      // Set redirect to false to handle the redirect manually
      const result = await signIn('google', { 
        callbackUrl,
        redirect: false,
      });
      
      if (result?.error) {
        console.error('Sign-in failed:', result.error);
        setIsSigningIn(false);
      } else if (result?.url) {
        console.log('Sign-in successful, redirecting to:', result.url);
        // Force a session update before redirecting
        await updateSession();
        // Redirect to the intended page
        window.location.href = result.url;
      }
    } catch (error) {
      console.error('Sign-in error:', error);
      setIsSigningIn(false);
    }
  }, [pathname, updateSession]);

  const handleSignOut = useCallback(async () => {
    console.log('Signing out from Header...');
    
    try {
      // For protected pages, redirect to home after sign-out
      // For other pages, stay on the same page after sign-out
      const callbackUrl = protectedPaths.includes(pathname) ? '/' : pathname;
      console.log(`Sign-out with callbackUrl: ${callbackUrl}`);
      
      const result = await signOut({ 
        redirect: false,
      });
      
      if (result?.url) {
        // Force session update before redirect
        await updateSession();
        window.location.href = callbackUrl;
      }
    } catch (error) {
      console.error('Sign-out error:', error);
    }
  }, [pathname, protectedPaths, updateSession]);

  return (
    <header className="bg-[#1a1a1a] text-white sticky top-0 z-50 border-b border-gray-700">
      <div className="container mx-auto px-4 py-3 flex items-center justify-between">
        {/* Logo - points to landing page */}
        <Link href="/search" className="flex items-center">
          <Film className="h-6 w-6 text-[#E50914] mr-2" />
          <h1 className="text-xl sm:text-2xl font-bold text-[#E50914] tracking-tight">Watchlist</h1>
        </Link>

        {/* Mobile Icons - visible only on small screens */}
        <div className="flex md:hidden items-center gap-2">
          {navItems.map((item) => (
            <Link
              key={item.name}
              href={item.href}
              className={`p-2 rounded-full transition-colors ${
                pathname === item.href
                  ? 'text-[#E50914] bg-gray-800'
                  : 'text-white hover:text-[#E50914] hover:bg-gray-800'
              }`}
              aria-label={item.name}
            >
              <item.icon className="h-6 w-6" />
            </Link>
          ))}
        </div>

        {/* Desktop Navigation */}
        <nav className="hidden md:flex space-x-8 justify-center flex-1">
          {navItems.map((item) => (
            <Link
              key={item.name}
              href={item.href}
              className={`flex items-center space-x-1 transition-colors ${
                pathname === item.href
                  ? 'text-[#E50914]'
                  : 'text-white hover:text-[#E50914]'
              }`}
            >
              <item.icon
                className={`h-5 w-5 mr-2 ${
                  pathname === item.href ? 'text-[#E50914]' : 'text-white'
                }`}
              />
              <span>{item.name}</span>
            </Link>
          ))}
        </nav>

        {/* Desktop Controls */}
        <div className="hidden md:flex items-center gap-4">
          {loading ? (
            // Loading state
            <Button
              variant="outline"
              size="sm"
              disabled
              className="flex items-center gap-1 text-white bg-[#1a1a1a] border-gray-700"
            >
              <Loader2 className="h-4 w-4 animate-spin" />
              <span className="hidden sm:inline">Loading...</span>
            </Button>
          ) : session ? (
            // Authenticated state
            <DropdownMenu>
              <DropdownMenuTrigger asChild>
                <Button
                  variant="outline"
                  size="sm"
                  className="flex items-center gap-2 text-white bg-[#1a1a1a] border-gray-700 hover:text-[#E50914] hover:border-[#E50914] hover:bg-[#2a2a2a]"
                >
                  {session.user.image ? (
                    <img 
                      src={`/api/avatar?url=${encodeURIComponent(session.user.image)}`} 
                      alt={session.user.name || 'User'} 
                      className="w-5 h-5 rounded-full" 
                    />
                  ) : (
                    <UserCircle className="h-4 w-4" />
                  )}
                  <span className="hidden sm:inline">{session.user.name || session.user.email}</span>
                </Button>
              </DropdownMenuTrigger>
              <DropdownMenuContent className="w-56 bg-gray-800 text-white border-gray-700" align="end">
                <DropdownMenuLabel>{session.user.name || 'Profile'}</DropdownMenuLabel>
                <DropdownMenuSeparator className="bg-gray-600" />
                <DropdownMenuItem 
                  onSelect={() => setIsPlatformModalOpen(true)} 
                  className="cursor-pointer hover:!bg-gray-700 hover:!text-[#E50914]"
                >
                  <Monitor className="mr-2 h-4 w-4" />
                  <span>Platforms</span>
                </DropdownMenuItem>
                <DropdownMenuItem asChild className="cursor-pointer hover:!bg-gray-700 hover:!text-[#E50914]">
                  <Link href="/settings">
                    <SettingsIcon className="mr-2 h-4 w-4" />
                    <span>Settings</span>
                  </Link>
                </DropdownMenuItem>
                <DropdownMenuSeparator className="bg-gray-600" />
                <DropdownMenuItem
                  onSelect={handleSignOut}
                  className="cursor-pointer hover:!bg-gray-700 hover:!text-[#E50914]"
                >
                  <LogOut className="mr-2 h-4 w-4" />
                  <span>Sign Out</span>
                </DropdownMenuItem>
              </DropdownMenuContent>
            </DropdownMenu>
          ) : (
            // Unauthenticated state
            <Button
              variant="outline"
              size="sm"
              onClick={handleSignIn}
              disabled={isSigningIn || status === 'loading'}
              className="flex items-center gap-1 text-white bg-[#1a1a1a] border-gray-700 hover:text-[#E50914] hover:border-[#E50914] hover:bg-[#2a2a2a]"
            >
              {isSigningIn || status === 'loading' ? (
                <Loader2 className="h-4 w-4 animate-spin" />
              ) : (
                <LogIn className="h-4 w-4" />
              )}
              <span className="hidden sm:inline">{isSigningIn ? 'Signing In...' : status === 'loading' ? 'Loading...' : 'Sign In'}</span>
            </Button>
          )}
        </div>

        {/* Mobile Menu Toggle */}
        <Button
          variant="ghost"
          className="md:hidden text-white hover:text-[#E50914] bg-[#1a1a1a]"
          onClick={() => setIsMenuOpen(!isMenuOpen)}
        >
          <List className="h-6 w-6" />
        </Button>

        {/* Mobile Navigation */}
        {isMenuOpen && (
          <nav className="absolute top-full left-0 right-0 bg-[#1a1a1a] md:hidden border-t border-gray-700">
            <div className="flex flex-col p-4 space-y-2">
              {session && (
                <Button
                  variant="outline"
                  size="sm"
                  onClick={() => {
                    setIsPlatformModalOpen(true);
                    setIsMenuOpen(false);
                  }}
                  className="flex items-center gap-1 text-white bg-[#1a1a1a] border-gray-700 hover:text-[#E50914] hover:border-[#E50914] hover:bg-[#2a2a2a] justify-start"
                  aria-label="Manage Platforms"
                >
                  <Monitor className="h-4 w-4" />
                  <span>Platforms</span>
                </Button>
              )}
              
              {session && (
                <Button asChild variant="outline" size="sm" className="w-full flex items-center gap-1 text-white bg-[#1a1a1a] border-gray-700 hover:text-[#E50914] hover:border-[#E50914] hover:bg-[#2a2a2a] justify-start">
                  <Link href="/settings" onClick={() => setIsMenuOpen(false)}>
                    <SettingsIcon className="h-4 w-4" /><span>Settings</span>
                  </Link>
                </Button>
              )}
              
              {loading ? (
                <Button
                  variant="outline"
                  size="sm"
                  disabled
                  className="flex items-center gap-1 text-white bg-[#1a1a1a] border-gray-700 justify-start"
                >
                  <Loader2 className="h-4 w-4 animate-spin" />
                  <span>Loading...</span>
                </Button>
              ) : session ? (
                <Button
                  variant="outline"
                  size="sm"
                  onClick={() => {
                    handleSignOut();
                    setIsMenuOpen(false);
                  }}
                  className="flex items-center gap-1 text-white bg-[#1a1a1a] border-gray-700 hover:text-[#E50914] hover:border-[#E50914] hover:bg-[#2a2a2a] justify-start"
                >
                  <LogOut className="h-4 w-4" />
                  <span>Sign Out ({session.user.name ? session.user.name.split(' ')[0] : session.user.email.split('@')[0]})</span>
                </Button>
              ) : (
                <Button
                  variant="outline"
                  size="sm"
                  onClick={() => {
                    handleSignIn();
                    setIsMenuOpen(false);
                  }}
                  disabled={isSigningIn || status === 'loading'}
                  className="flex items-center gap-1 text-white bg-[#1a1a1a] border-gray-700 hover:text-[#E50914] hover:border-[#E50914] hover:bg-[#2a2a2a] justify-start"
                >
                  {isSigningIn || status === 'loading' ? (
                    <Loader2 className="h-4 w-4 animate-spin" />
                  ) : (
                    <LogIn className="h-4 w-4" />
                  )}
                  <span>{isSigningIn ? 'Signing In...' : status === 'loading' ? 'Loading...' : 'Sign In'}</span>
                </Button>
              )}
            </div>
          </nav>
        )}

        {/* Platform Management Modal */}
        {session && (
          <PlatformManagementModal
            isOpen={isPlatformModalOpen}
            onClose={() => setIsPlatformModalOpen(false)}
          />
        )}
      </div>
    </header>
  );
}